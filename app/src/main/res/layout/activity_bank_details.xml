<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:animateLayoutChanges="true"
    tools:context=".Views.BankDetailsActivity">

    <!-- Header con efecto parallax -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:fitsSystemWindows="true"
        android:background="@android:color/transparent"
        android:animateLayoutChanges="true"
        app:elevation="0dp">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsingToolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:contentScrim="@drawable/background_gradient"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:titleEnabled="false">

            <!-- Fondo con gradiente -->
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/background_gradient"
                app:layout_collapseMode="parallax"
                app:layout_collapseParallaxMultiplier="0.7" />

            <!-- Logo decorativo -->
            <ImageView
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_gravity="end|bottom"
                android:src="@drawable/ic_card"
                android:alpha="0.15"
                app:tint="@color/green_accent"
                app:layout_collapseMode="parallax"
                app:layout_collapseParallaxMultiplier="0.4" />

            <!-- Header content -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                app:layout_collapseMode="parallax"
                app:layout_collapseParallaxMultiplier="0.7">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_centerInParent="true">

                    <TextView
                        android:id="@+id/tvBankName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="BNB"
                        android:fontFamily="@font/montserrat_bold"
                        android:textColor="@color/green_accent"
                        android:textStyle="bold"
                        android:textSize="40sp"
                        android:alpha="0.95"
                        android:transitionName="bankNameTransition" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Banco\nNacional\nde Bolivia"
                        android:fontFamily="@font/montserrat"
                        android:textAlignment="center"
                        android:textColor="@color/green_accent"
                        android:textSize="12sp"
                        android:alpha="0.8"
                        android:transitionName="bankSubtitleTransition" />

                    <TextView
                        android:id="@+id/tvBankFullName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="Banco Nacional de Bolivia"
                        android:fontFamily="@font/montserrat_medium"
                        android:textAlignment="center"
                        android:textColor="@android:color/white"
                        android:alpha="0.9"
                        android:textSize="18sp"
                        android:transitionName="bankFullNameTransition" />
                </LinearLayout>
            </RelativeLayout>

            <!-- Toolbar con botón de retroceso -->
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin"
                app:contentInsetStartWithNavigation="0dp">

                <!-- Aquí creamos el headerLayout que falta en el código actual -->
                <RelativeLayout
                    android:id="@+id/headerLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:foreground="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_back"
                            app:tint="@android:color/white" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Atrás"
                            android:fontFamily="@font/montserrat_medium"
                            android:layout_marginStart="8dp"
                            android:textColor="@android:color/white"
                            android:textSize="16sp"/>
                    </LinearLayout>
                </RelativeLayout>
            </androidx.appcompat.widget.Toolbar>
        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <!-- Contenido principal con efecto de scroll -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:paddingBottom="16dp"
        android:animateLayoutChanges="true"
        android:overScrollMode="never"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:animateLayoutChanges="true">

            <!-- Tarjeta de Modalidad -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardModalidad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                app:cardBackgroundColor="#121212"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                android:stateListAnimator="@animator/card_state_list_anim"
                android:clickable="true"
                android:focusable="true"
                app:rippleColor="@color/green_accent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_settings"
                            app:tint="@color/green_accent"
                            android:transitionName="modalidadIconTransition"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:text="Modalidad"
                            android:fontFamily="@font/montserrat_medium"
                            android:textColor="@color/green_accent"
                            android:textSize="16sp"
                            android:transitionName="modalidadTitleTransition"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvModalidad"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="Mensual"
                        android:fontFamily="@font/montserrat_bold"
                        android:textColor="@android:color/white"
                        android:textSize="32sp"
                        android:textStyle="bold"
                        android:transitionName="modalidadValueTransition"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:alpha="0.7"
                        android:fontFamily="@font/montserrat"
                        android:text="Tiempo en el que los límites de la tarjeta se recargan (generalmente Mensual o Semanal)"
                        android:textColor="@android:color/white"
                        android:textSize="12sp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Tarjeta de Límites -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardLimites"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginVertical="8dp"
                app:cardBackgroundColor="#121212"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                android:stateListAnimator="@animator/card_state_list_anim"
                android:clickable="true"
                android:focusable="true"
                app:rippleColor="@color/green_accent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_card"
                            app:tint="@color/green_accent"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:text="Límites/Restricciones"
                            android:fontFamily="@font/montserrat_medium"
                            android:textColor="@color/green_accent"
                            android:textSize="16sp"/>
                    </LinearLayout>

                    <!-- Internet Limits -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        app:cardBackgroundColor="#1A2A25"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="0dp"
                        android:foreground="?attr/selectableItemBackground">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="12dp">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_internet"
                                app:tint="@android:color/white"
                                android:layout_gravity="center_vertical" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginStart="12dp">

                                <TextView
                                    android:id="@+id/tvLimiteInternet"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="50$ USD/Internet"
                                    android:fontFamily="@font/montserrat_bold"
                                    android:textColor="@android:color/white"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Pagos por Internet"
                                    android:fontFamily="@font/montserrat"
                                    android:textColor="@android:color/white"
                                    android:textSize="12sp"
                                    android:alpha="0.7" />
                            </LinearLayout>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Card Limits -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        app:cardBackgroundColor="#1A2A25"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="0dp"
                        android:foreground="?attr/selectableItemBackground">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="12dp">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_card"
                                app:tint="@android:color/white"
                                android:layout_gravity="center_vertical" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginStart="12dp">

                                <TextView
                                    android:id="@+id/tvLimiteTarjeta"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="25$ USD/Tarjeta"
                                    android:fontFamily="@font/montserrat_bold"
                                    android:textColor="@android:color/white"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Pagos con tarjeta física en el exterior"
                                    android:fontFamily="@font/montserrat"
                                    android:textColor="@android:color/white"
                                    android:textSize="12sp"
                                    android:alpha="0.7" />
                            </LinearLayout>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- ATM Limits -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        app:cardBackgroundColor="#1A2A25"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="0dp"
                        android:foreground="?attr/selectableItemBackground">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="12dp">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_atm"
                                app:tint="@android:color/white"
                                android:layout_gravity="center_vertical" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginStart="12dp">

                                <TextView
                                    android:id="@+id/tvLimiteATM"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="25$ USD/ATM"
                                    android:fontFamily="@font/montserrat_bold"
                                    android:textColor="@android:color/white"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Retiro de dinero por ATM"
                                    android:fontFamily="@font/montserrat"
                                    android:textColor="@android:color/white"
                                    android:textSize="12sp"
                                    android:alpha="0.7" />
                            </LinearLayout>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Tarjeta de Plataformas -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardPlataformas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginVertical="8dp"
                app:cardBackgroundColor="#121212"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                android:stateListAnimator="@animator/card_state_list_anim"
                android:clickable="true"
                android:focusable="true"
                app:rippleColor="@color/green_accent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_netflix"
                            app:tint="@color/green_accent" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:text="Plataformas"
                            android:fontFamily="@font/montserrat_medium"
                            android:textColor="@color/green_accent"
                            android:textSize="16sp"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvPlataformas"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Solo Plataformas\nde Streaming"
                        android:fontFamily="@font/montserrat_bold"
                        android:textColor="@android:color/white"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginTop="16dp" />

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:scrollbars="none"
                        android:overScrollMode="never">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="4dp">

                            <com.google.android.material.card.MaterialCardView
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_margin="4dp"
                                app:cardBackgroundColor="#1A2A25"
                                app:cardCornerRadius="12dp"
                                app:cardElevation="4dp"
                                android:clickable="true"
                                android:focusable="true"
                                android:stateListAnimator="@animator/lift_on_touch"
                                app:rippleColor="@android:color/white"
                                android:foreground="?attr/selectableItemBackground">

                                <ImageView
                                    android:layout_width="36dp"
                                    android:layout_height="36dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_netflix"
                                    app:tint="@android:color/white" />
                            </com.google.android.material.card.MaterialCardView>

                            <com.google.android.material.card.MaterialCardView
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_margin="4dp"
                                app:cardBackgroundColor="#1A2A25"
                                app:cardCornerRadius="12dp"
                                app:cardElevation="4dp"
                                android:clickable="true"
                                android:focusable="true"
                                android:stateListAnimator="@animator/lift_on_touch"
                                app:rippleColor="@android:color/white"
                                android:foreground="?attr/selectableItemBackground">

                                <ImageView
                                    android:layout_width="36dp"
                                    android:layout_height="36dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_facebook"
                                    app:tint="@android:color/white" />
                            </com.google.android.material.card.MaterialCardView>

                            <com.google.android.material.card.MaterialCardView
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_margin="4dp"
                                app:cardBackgroundColor="#1A2A25"
                                app:cardCornerRadius="12dp"
                                app:cardElevation="4dp"
                                android:clickable="true"
                                android:focusable="true"
                                android:stateListAnimator="@animator/lift_on_touch"
                                app:rippleColor="@android:color/white"
                                android:foreground="?attr/selectableItemBackground">

                                <ImageView
                                    android:layout_width="36dp"
                                    android:layout_height="36dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_spotify"
                                    app:tint="@android:color/white" />
                            </com.google.android.material.card.MaterialCardView>

                            <com.google.android.material.card.MaterialCardView
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_margin="4dp"
                                app:cardBackgroundColor="#1A2A25"
                                app:cardCornerRadius="12dp"
                                app:cardElevation="4dp"
                                android:clickable="true"
                                android:focusable="true"
                                android:stateListAnimator="@animator/lift_on_touch"
                                app:rippleColor="@android:color/white"
                                android:foreground="?attr/selectableItemBackground">

                                <ImageView
                                    android:layout_width="36dp"
                                    android:layout_height="36dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_playstation"
                                    app:tint="@android:color/white" />
                            </com.google.android.material.card.MaterialCardView>
                        </LinearLayout>
                    </HorizontalScrollView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Plataformas admitidas para pagos por internet"
                        android:fontFamily="@font/montserrat"
                        android:textColor="@android:color/white"
                        android:textSize="12sp"
                        android:alpha="0.7"
                        android:layout_marginTop="12dp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Tarjeta de Condiciones -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardCondiciones"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginVertical="8dp"
                app:cardBackgroundColor="#121212"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                android:stateListAnimator="@animator/card_state_list_anim"
                android:clickable="true"
                android:focusable="true"
                app:rippleColor="@color/green_accent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_back"
                            app:tint="@color/green_accent" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:text="Condiciones"
                            android:fontFamily="@font/montserrat_medium"
                            android:textColor="@color/green_accent"
                            android:textSize="16sp"/>
                    </LinearLayout>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        app:cardBackgroundColor="#1A2A25"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="0dp">

                        <TextView
                            android:id="@+id/tvCondiciones"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Solo para cuentas\nabiertas antes del\n02/10/2024"
                            android:fontFamily="@font/montserrat_bold"
                            android:textColor="@android:color/white"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:padding="16dp" />
                    </com.google.android.material.card.MaterialCardView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Condiciones que tiene la tarjeta para operaciones (Internet/ATM/Físico)"
                        android:fontFamily="@font/montserrat"
                        android:textColor="@android:color/white"
                        android:textSize="12sp"
                        android:alpha="0.7"
                        android:layout_marginTop="12dp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Tarjeta de Compras Crypto -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardCrypto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginVertical="8dp"
                android:layout_marginBottom="30dp"
                app:cardBackgroundColor="#121212"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                android:stateListAnimator="@animator/card_state_list_anim"
                android:clickable="true"
                android:focusable="true"
                app:rippleColor="#FF4436">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_prohibited"
                            app:tint="#FF4436" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:text="Compras Crypto"
                            android:fontFamily="@font/montserrat_medium"
                            android:textColor="#FF4436"
                            android:textSize="16sp"/>
                    </LinearLayout>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        app:cardBackgroundColor="#1A1A1A"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="0dp"
                        app:strokeColor="#FF4436"
                        app:strokeWidth="1dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="16dp"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/ic_prohibited_overlay"
                                app:tint="#FF4436"
                                android:layout_gravity="center_vertical" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="No permitido"
                                android:fontFamily="@font/montserrat_bold"
                                android:textColor="#FF4436"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:layout_marginStart="16dp" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="El Banco NO permite compras de Criptomonedas con esta tarjeta de débito"
                        android:fontFamily="@font/montserrat"
                        android:textColor="@android:color/white"
                        android:textSize="12sp"
                        android:alpha="0.7"
                        android:layout_marginTop="12dp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Elemento decorativo -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="200dp">

                <ImageView
                    android:layout_width="280dp"
                    android:layout_height="280dp"
                    android:layout_gravity="end"
                    android:src="@drawable/ic_card"
                    android:alpha="0.2"
                    app:tint="@color/green_accent" />
            </FrameLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Botón flotante para acciones rápidas -->
    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/fabAction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Verificar Límites"
        android:textColor="@android:color/black"
        android:fontFamily="@font/montserrat_medium"
        app:backgroundTint="@color/green_accent"
        app:icon="@drawable/ic_arrow_up"
        app:iconTint="@android:color/black"
        app:layout_anchor="@id/nestedScrollView"
        app:layout_anchorGravity="bottom|end"/>
</androidx.coordinatorlayout.widget.CoordinatorLayout>