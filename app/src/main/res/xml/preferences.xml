<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="Notificaciones">
        <SwitchPreference
            android:key="enable_notifications"
            android:title="Habilitar notificaciones"
            android:summary="Recibir alertas de cambios en tipos de cambio"
            android:defaultValue="true" />

        <EditTextPreference
            android:key="notification_interval"
            android:title="Intervalo de verificación"
            android:summary="Minutos entre cada verificación (mínimo 15)"
            android:defaultValue="15"
            android:inputType="number" />
    </PreferenceCategory>

    <PreferenceCategory android:title="Umbrales de cambio">
        <SeekBarPreference
            android:key="small_change_threshold"
            android:title="Cambio pequeño"
            android:summary="Porcentaje para notificar cambios pequeños"
            android:defaultValue="1"
            android:max="5" />

        <SeekBarPreference
            android:key="medium_change_threshold"
            android:title="Cambio mediano"
            android:summary="Porcentaje para notificar cambios medianos"
            android:defaultValue="3"
            android:max="10" />

        <SeekBarPreference
            android:key="large_change_threshold"
            android:title="Cambio grande"
            android:summary="Porcentaje para notificar cambios grandes"
            android:defaultValue="5"
            android:max="15" />
    </PreferenceCategory>

    <PreferenceCategory android:title="Plataformas">
        <MultiSelectListPreference
            android:key="exchanges_to_monitor"
            android:title="Plataformas a monitorear"
            android:summary="Selecciona las plataformas que deseas monitorear"
            android:entries="@array/exchange_names"
            android:entryValues="@array/exchange_values"
            android:defaultValue="@array/default_exchanges" />
    </PreferenceCategory>
</PreferenceScreen>